# Компилятор и флаги
CXX = g++
CXXFLAGS = -std=c++11 -pthread -O2 -Wall -Wextra

# Имя исполняемого файла
TARGET = Matr3

# Исходные файлы
SOURCES = Matr3.cpp

# Правило по умолчанию
all: $(TARGET)

# Сборка исполняемого файла
$(TARGET): $(SOURCES)
	$(CXX) $(CXXFLAGS) -o $(TARGET) $(SOURCES)

# Очистка
clean:
	rm -f $(TARGET)

# Пересборка
rebuild: clean all

# Запуск
run: $(TARGET)
	./$(TARGET)

.PHONY: all clean rebuild run
